<h1>Listing articles</h1>

<%= link_to "New Article", new_article_path %>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="2"></th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td> <%=article.title %> </td>
			<td> <%=article.text %> </td>
			<td><%= link_to "Edit Article", edit_article_path %></td>
		</tr>
	<% end %>

</table>